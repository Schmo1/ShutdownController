<UserControl x:Class="ShutdownController.Views.LegendsViewDownUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:strings="clr-namespace:ShutdownController.Resources.DownUploadStrings">


    
    
    <StackPanel Orientation="Horizontal">
        <Border Width="12" Height="12" Background="#709999" CornerRadius="3" />
        <TextBlock Text="{x:Static strings:DownUploadStrings.download}" VerticalAlignment="Center" Margin="7 0 20 0" Foreground="#8ca7ba" />

        <Border Width="12" Height="12" Background="#faaa66" CornerRadius="3" />
        <TextBlock Text="{x:Static strings:DownUploadStrings.upload}" VerticalAlignment="Center" Margin="7 0 20 0" Foreground="#8ca7ba" />

    </StackPanel>
</UserControl>
