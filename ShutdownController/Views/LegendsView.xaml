<UserControl x:Class="ShutdownController.Views.LegendsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary Source="Styles/LegendStyle.xaml"/>
    </UserControl.Resources>
    
    
    <StackPanel Orientation="Horizontal">
        <Border Width="12" Height="12" Background="Red" CornerRadius="3" />
        <TextBlock Text="Download" VerticalAlignment="Center" Margin="7 0 20 0" Foreground="#6c879a" />

        <Border Width="12" Height="12" Background="Blue" CornerRadius="3" />
        <TextBlock Text="Upload" VerticalAlignment="Center" Margin="7 0 0 0" Foreground="#6c879a" />

    </StackPanel>
</UserControl>
